# Development Environment Variables
# Copy this to .env for local development

# JWT Secret (change this in production)
JWT_SECRET=dev-secret-key-change-this-in-production-use-openssl-rand-hex-32

# Groq AI Configuration (get your key from https://console.groq.com/)
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL_NAME=llama3-8b-8192

# Database Configuration (PostgreSQL)
POSTGRES_DB=resumator
POSTGRES_USER=resumator
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql://resumator:password@db:5432/resumator

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# MinIO Configuration (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/app/storage

# Debug Mode
DEBUG=true
